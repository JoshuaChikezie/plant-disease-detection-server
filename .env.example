# Plant Disease Detection API Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================

# Server host and port
HOST=localhost
PORT=8000

# Development mode (set to false in production)
DEBUG=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret key (generate a secure random string for production)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# JWT Algorithm
ALGORITHM=HS256

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database URL (for development)
DATABASE_URL=sqlite:///./data/app.db

# For production, consider PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/dbname

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Directory for uploaded files
UPLOAD_DIR=./uploads

# Maximum file size in bytes (10MB)
MAX_FILE_SIZE=10485760

# Maximum audio file size in bytes (25MB)
MAX_AUDIO_SIZE=26214400

# Allowed image formats
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,bmp,tiff

# Allowed audio formats
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,flac

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# Base path for AI models
MODEL_PATH=./models

# Disease detection model paths
DISEASE_MODEL_PATH=./models/disease_detection
CASSAVA_MODEL_PATH=./models/disease_detection/cassava_model.h5
MAIZE_MODEL_PATH=./models/disease_detection/maize_model.h5
COCOA_MODEL_PATH=./models/disease_detection/cocoa_model.h5

# Voice processing model paths
VOICE_MODEL_PATH=./models/voice
WHISPER_MODEL_PATH=./models/voice/whisper

# NLP model paths
NLP_MODEL_PATH=./models/nlp
LANGUAGE_MODEL_PATH=./models/nlp/language_model

# =============================================================================
# VOICE PROCESSING CONFIGURATION
# =============================================================================

# Default voice settings
DEFAULT_VOICE_LANGUAGE=en
DEFAULT_VOICE_SPEED=normal
DEFAULT_VOICE_PITCH=normal

# Audio processing settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
LOG_FILE=./logs/app.log

# Maximum log file size in MB
MAX_LOG_SIZE=100

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:8081

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# General API rate limit (requests per minute)
GENERAL_RATE_LIMIT=100

# Image upload rate limit (requests per minute)
IMAGE_UPLOAD_RATE_LIMIT=20

# Voice processing rate limit (requests per minute)
VOICE_RATE_LIMIT=30

# =============================================================================
# SUPPORTED LANGUAGES AND CROPS
# =============================================================================

# Supported languages (comma-separated language codes)
SUPPORTED_LANGUAGES=en,tw,ga,ha,ee

# Supported crops (comma-separated)
SUPPORTED_CROPS=cassava,maize,cocoa,yam,plantain,rice,millet,sorghum,groundnut,cowpea

# =============================================================================
# EXTERNAL API CONFIGURATION (Optional)
# =============================================================================

# OpenAI API key (for advanced NLP features)
# OPENAI_API_KEY=your-openai-api-key

# Google Cloud API key (for enhanced speech services)
# GOOGLE_CLOUD_API_KEY=your-google-cloud-key

# Weather API key (for agricultural weather data)
# WEATHER_API_KEY=your-weather-api-key

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Enable performance monitoring
ENABLE_MONITORING=true

# Enable usage analytics
ENABLE_ANALYTICS=true

# Analytics data retention in days
ANALYTICS_RETENTION_DAYS=90

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Automatic backup interval in hours
BACKUP_INTERVAL_HOURS=24

# Database maintenance interval in hours
MAINTENANCE_INTERVAL_HOURS=168

# Cleanup old files interval in hours
CLEANUP_INTERVAL_HOURS=72

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable detailed error responses (disable in production)
DETAILED_ERRORS=true

# Enable API documentation endpoints
ENABLE_DOCS=true

# Enable debug logging for AI modules
AI_DEBUG_LOGGING=false
